{% extends 'base.html.twig' %}

{% block title %}
{{page_title}}
{% endblock %}

{% block body %}

<div class="container">
    <div>
        <h1>{{ trick.name }}</h1>
    </div>
    
    <div class="row trick-full">
        <img src="{{ asset('images') }}/{{ trick.cover }}" alt="{{ trick.cover }}" />
        
        <span class="about card-icons">
            <a title="Edit" href="{{ path('trick_edit', {'id': trick.id}) }}">
                <i class="fas fa-pencil-alt"></i>
            </a>
            
            <form method="post" action="{{ path('trick_delete', {'id': trick.id}) }}"
                onsubmit="return confirm('Etes-vous certain de vouloir supprimer ce trick ?');">
            
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
                
                <button title="Delete" class="btn-delete"><i class="fas fa-trash-alt"></i></button>
            </form>
        </span>

    </div>
    
    <!--Gallery-->
    <div id="trickGallery" class="mt-3">
        <h2>Gallerie de photos et vid√©os</h2>
        <div class="flex mt-3">

            <div class="card card-show-trick">
                {# <img class="card-img-top" src="{{ asset('images') }}/{{ trick.1.cover }}" alt="{{ trick.1.cover }}" /> #}
                <img class="card-img-top" src="https://via.placeholder.com/150x100" alt="placeholder.com/150x100" />
                <div class="card-body">
                    {# <h4 class="card-title text-truncate">{{ trick.1.name }}</h4> #}
                    <h4 class="card-title text-truncate">image-150x100</h4>
                </div>
            </div>

            <div class="card card-show-trick">
                <img class="card-img-top" src="https://via.placeholder.com/150x100" alt="placeholder.com/150x100" />
                <div class="card-body">
                    <h4 class="card-title text-truncate">image-150x100</h4>
                </div>
            </div>

            <div class="card card-show-trick">
                <img class="card-img-top" src="https://via.placeholder.com/150x100" alt="placeholder.com/150x100" />
                <div class="card-body">
                    <h4 class="card-title text-truncate">image-150x100</h4>
                </div>
            </div>
        
            <div class="card card-show-trick">
                <img class="card-img-top" src="https://via.placeholder.com/150x100" alt="placeholder.com/150x100" />
                <div class="card-body">
                    <h4 class="card-title text-truncate">image-150x100</h4>
                </div>
            </div>
        
            <div class="card card-show-trick">
                <img class="card-img-top" src="https://via.placeholder.com/150x100" alt="placeholder.com/150x100" />
                <div class="card-body">
                    <h4 class="card-title text-truncate">image-150x100</h4>
                </div>
            </div>
        
            <div class="card card-show-trick">
                <img class="card-img-top" src="https://via.placeholder.com/150x100" alt="placeholder.com/150x100" />
                <div class="card-body">
                    <h4 class="card-title text-truncate">image-150x100</h4>
                </div>
            </div>
        </div>

    </div>
    <!-- End Gallery-->

    <div class="trick-comment">
        <p>
            {{ trick.comment }}
        </p>
    </div>
    <hr>

    <table class="table trick-show">
        <tbody>
            <tr>
                <th>Category</th>
                <td>{{ trick.category.name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ trick.username.username }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ trick.createdAt ? trick.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ trick.updatedAt ? trick.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center">
        <a class="btn btn-info" href="{{ path('trick_index') }}#trickGallery">Retour</a>

        <a class="btn btn-warning" href="{{ path('trick_edit', {'id': trick.id}) }}">Modifier</a>

        {{ include('trick/_delete_form.html.twig') }}
    </div>

</div>

{% endblock %}
