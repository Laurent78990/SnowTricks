{% block modal %}

<!-- Central Modal Small -->
<div class="modal fade" id="centralModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
aria-hidden="true">

<!-- Change class .modal-lg to change the size of the modal -->
<div class="modal-dialog modal-lg" role="document">

  <div class="modal-content">
    
    <div class="modal-header">
      <h4 class="modal-title w-100" id="myModalLabel">Create new trick</h4>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <div class="modal-body">
      {{ include('trick/_form.html.twig') }}
    </div>
    
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary btn-sm">Save changes</button>
    </div>
  </div>
</div>
</div>
