{% extends 'base.html.twig' %}

{% block title %}
    {{page_title}}
{% endblock %}

{% block body %}
    <h1>{{page_title}}</h1>

    {# {{ include('trick/_form.html.twig', {'button_label': 'Update'}) }} #}

<div class="text-center">
    <img class="width-trick-edit" src="{{ asset('images/' ~ trick.cover) }}" alt="{{ trick.cover }}" />
    <div class="form-edit mt-3">
        {{ form_start(form) }}

                <div class="flex-center">
                    <label class="mr-3 text-left">Nom</label>
                    {{ form_widget(form.name) }}
                </div>
                
                <div class="flex-center">
                    <label class="mr-3 text-left">Cat√©gorie</label>
                    {{ form_widget(form.category) }}
                </div>

                <div class="flex-center">
                    <label class="mr-3 text-left">Image</label>
                    {{ form_widget(form.cover) }}
                </div>

                <div class="flex-center">
                    <label class="mr-3 text-left">Description</label>
                    {{ form_widget(form.comment) }}
                </div>
                
                <a class="btn btn-info" href="{{ path('trick_index') }}#trickGallery">Retour</a>
    
                <button class="btn btn-warning">{{ button_label|default('Enregistrer') }}</button>

        {{ form_end(form) }}

        {{ include('trick/_delete_form.html.twig') }}
    </div>
</div>

{% endblock %}
