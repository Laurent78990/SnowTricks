{% extends 'base.html.twig' %}

{% block title %}Mot de pass oublié{% endblock %}

{% block body %}

<div class="container">    
    <div class="card">
        {# <div class="card-block"> #}

            <form method="post">

                {% if app.user %}

                    <div class="card-block user-logged">
                        <div class="mb-3 text-center">
                            <h1 class="h3 mb-3 font-weight-normal">
                            Vous êtes déjà connecté comme "<span class="text-blue">{{ app.user.username }}</span>"
                            </h1>
                            <a class="btn btn-green" href="{{ path('trick_index') }}">Retour</a>
                            <a class="btn btn-danger" href="{{ path('app_logout') }}">Déconnexion</a>
                        </div>
                    </div>
                    {# {% endif %} #}
                
                {% else %}
                    <div class="card-block user-sign-in">

                        <h1 class="h3 mb-3 font-weight-normal">Mot de passe oublié</h1>
                        
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" 
                            class="form-control" required autofocus 
                            placeholder="Saisissez votre email"/>
                        
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                        <div class="flex-center mt-4">
                        
                            <button class="btn btn-primary" type="submit">Envoyer</button>
                            
                            {# <a class="btn btn-warning" href="{{ path('app_registration') }}">S'inscrire</a>  #}
                        </div>

                    </div>
                {% endif %}

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

            </form>{# End Form #}

        </div>{# End class="card-block"> #}
    </div> {# End class="card"> #}
</div> {# End class="container"> #}

{% endblock %}
