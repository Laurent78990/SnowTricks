{% extends 'base.html.twig' %}

{% block title %}Comments{% endblock %}

{% block body %}
    <h1>Comments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Trick_id</th>
                <td>{{ comment.trickId }}</td>
            </tr>
            <tr>
                <th>Co_text</th>
                <td>{{ comment.coText }}</td>
            </tr>
            <tr>
                <th>Co_author_id</th>
                <td>{{ comment.coAuthorId }}</td>
            </tr>
            <tr>
                <th>Co_last_update</th>
                <td>{{ comment.coLastUpdate ? comment.coLastUpdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Co_last_time</th>
                <td>{{ comment.coLastTime ? comment.coLastTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Co_active</th>
                <td>{{ comment.coActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comments_index') }}">back to list</a>

    <a href="{{ path('comments_edit', {'id': comment.id}) }}">edit</a>

    {{ include('comments/_delete_form.html.twig') }}
{% endblock %}
