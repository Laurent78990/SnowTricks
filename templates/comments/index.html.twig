{% extends 'base.html.twig' %}

{% block title %}Comments index{% endblock %}

{% block body %}
    <h1>Comments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Trick_id</th>
                <th>Co_text</th>
                <th>Co_author_id</th>
                <th>Co_last_update</th>
                <th>Co_last_time</th>
                <th>Co_active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.trickId }}</td>
                <td>{{ comment.coText }}</td>
                <td>{{ comment.coAuthorId }}</td>
                <td>{{ comment.coLastUpdate ? comment.coLastUpdate|date('Y-m-d') : '' }}</td>
                <td>{{ comment.coLastTime ? comment.coLastTime|date('H:i:s') : '' }}</td>
                <td>{{ comment.coActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('comments_show', {'id': comment.id}) }}">show</a>
                    <a href="{{ path('comments_edit', {'id': comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comments_new') }}">Create new</a>
{% endblock %}
