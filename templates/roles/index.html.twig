{% extends 'base.html.twig' %}

{% block title %}Roles index{% endblock %}

{% block body %}
    <h1>Roles index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ro_name</th>
                <th>Ro_desc</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.roName }}</td>
                <td>{{ role.roDesc }}</td>
                <td>
                    <a href="{{ path('roles_show', {'id': role.id}) }}">show</a>
                    <a href="{{ path('roles_edit', {'id': role.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('roles_new') }}">Create new</a>
{% endblock %}
