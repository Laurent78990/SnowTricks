{% extends 'base.html.twig' %}

{% block title %}Group index{% endblock %}

{% block body %}
    <h1>Group index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Gr_name</th>
                <th>Gr_desc</th>
                <th>Gr_crea_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td>{{ group.id }}</td>
                <td>{{ group.grName }}</td>
                <td>{{ group.grDesc }}</td>
                <td>{{ group.grCreaDate ? group.grCreaDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('group_show', {'id': group.id}) }}">show</a>
                    <a href="{{ path('group_edit', {'id': group.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('group_new') }}">Create new</a>
{% endblock %}
