{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Us_first_name</th>
                <td>{{ user.usFirstName }}</td>
            </tr>
            <tr>
                <th>Us_last_name</th>
                <td>{{ user.usLastName }}</td>
            </tr>
            <tr>
                <th>Us_role_id</th>
                <td>{{ user.usRoleId }}</td>
            </tr>
            <tr>
                <th>Us_photo_id</th>
                <td>{{ user.usPhotoId }}</td>
            </tr>
            <tr>
                <th>Us_crea_date</th>
                <td>{{ user.usCreaDate ? user.usCreaDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Us_crea_time</th>
                <td>{{ user.usCreaTime ? user.usCreaTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Us_last_cnx</th>
                <td>{{ user.usLastCnx ? user.usLastCnx|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Us_active</th>
                <td>{{ user.usActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('users_index') }}">back to list</a>

    <a href="{{ path('users_edit', {'id': user.id}) }}">edit</a>

    {{ include('users/_delete_form.html.twig') }}
